<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree view -->
        <record id="view_account_tree" model="ir.ui.view">
            <field name="name">g2_bank.account.tree</field>
            <field name="model">g2_bank.account</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="account_type"/>
                    <field name="balance"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_account_form" model="ir.ui.view">
            <field name="name">g2_bank.account.form</field>
            <field name="model">g2_bank.account</field>
            <field name="arch" type="xml">
                <form string="Account">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="account_type"/>
                            <field name="balance"/>
                            <field name="credit_line"/>
                        </group>

                        <notebook>
                            <page string="Customers">
                                <field name="customer_ids"/>
                            </page>

                            <page string="Movements">
                                <field name="movement_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="balance"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
